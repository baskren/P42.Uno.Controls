<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="MSBuild.Sdk.Extras/2.0.54">
  <PropertyGroup>
    <TargetFrameworks>uap10.0.17763;netstandard2.0;xamarinios10;xamarinmac20;MonoAndroid90;monoandroid10.0</TargetFrameworks>
    <!-- Ensures the .xr.xml files are generated in a proper layout folder -->
    <GenerateLibraryLayout>true</GenerateLibraryLayout>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|uap10.0.17763|AnyCPU'">
    <NoWarn>1701;1702</NoWarn>
  </PropertyGroup>


  <!-- PACKAGE REFERENCES -->
  <ItemGroup>
    <PackageReference Include="Uno.UI" Version="3.1.6" />
    <PackageReference Include="SkiaSharp.Svg" Version="1.60.0" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="Uno.SkiaSharp.Views" Version="2.80.0-uno.483" />
    <PackageReference Include="Uno.SkiaSharp.Wasm" Version="2.80.0-uno.483" />
  </ItemGroup>
  <ItemGroup Condition="'$(TargetFramework)' != 'netstandard2.0'">
    <PackageReference Include="SkiaSharp.Views.Uno" Version="2.80.2" />
  </ItemGroup>

  <!-- BLANKET PAGE AND COMPILE -->
  <ItemGroup>
    <Page Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <EmbeddedResource Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Remove="ContentAndDetailPresenters\ContentAndDetailPresenter.xaml" />
    <EmbeddedResource Remove="Popups\Alert.xaml" />
    <EmbeddedResource Remove="Popups\BusyPopup.xaml" />
    <EmbeddedResource Remove="Popups\PermissionPopup.xaml" />
    <EmbeddedResource Remove="Popups\TargetedPopup.xaml" />
    <EmbeddedResource Remove="Popups\Toast.xaml" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="ContentAndDetailPresenters\ContentAndDetailPresenter.xaml" />
    <None Remove="Popups\Alert.xaml" />
    <None Remove="Popups\BusyPopup.xaml" />
    <None Remove="Popups\PermissionPopup.xaml" />
    <None Remove="Popups\TargetedPopup.xaml" />
    <None Remove="Popups\Toast.xaml" />
  </ItemGroup>
  <ItemGroup>
    <Page Remove="ContentAndDetailPresenters\ContentAndDetailPresenter.xaml" />
    <Page Remove="Popups\Alert.xaml" />
    <Page Remove="Popups\BusyPopup.xaml" />
    <Page Remove="Popups\PermissionPopup.xaml" />
    <Page Remove="Popups\TargetedPopup.xaml" />
    <Page Remove="Popups\Toast.xaml" />
  </ItemGroup>

