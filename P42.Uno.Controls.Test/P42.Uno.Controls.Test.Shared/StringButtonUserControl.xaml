<UserControl
    x:Class="P42.Uno.Controls.Test.StringButtonUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:P42.Uno.Controls.Test"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="_userControl"
    mc:Ignorable="d">

    <Grid
        x:Name="_grid"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <Rectangle
            x:Name="_rectangle"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Fill="Gray" />
        <Button
            x:Name="_button"
            Padding="20,2,20,2"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Right"
            Background="Beige"
            BorderBrush="Green"
            BorderThickness="1"
            Content="{Binding}"
            CornerRadius="5"
            Opacity="0"
            Tapped="BorderTapped" />
    </Grid>
</UserControl>
