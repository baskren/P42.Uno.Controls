    <Page.Content>
        <Grid x:Name="_grid" Background="Yellow">
            <Grid.RowDefinitions>
                <RowDefinition Height="150" />
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.Children>
                <Button
                    x:Name="_button"
                    Grid.Row="1"
                    Click="_button_Click"
                    Content="Show ToolTip" />
                <Border
                    x:Name="_altBorder"
                    Grid.Row="1"
                    Width="50"
                    Height="50"
                    HorizontalAlignment="Center"
                    Background="Pink"
                    Tapped="OnAltBorderTapped" />
                <ListView x:Name="_listView" Grid.Row="2">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Padding="20,2,20,2"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Right"
                                Background="Beige"
                                BorderBrush="Green"
                                BorderThickness="1"
                                CornerRadius="5"
                                Tapped="BorderTapped">
                                <TextBlock Text="ZAP" />
                            </Button>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Rectangle
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Fill="Beige" />
                <popups:BubbleBorder
                    x:Name="_bubbleBorder"
                    Margin="5"
                    Padding="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="Orange"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CornerRadius="5"
                    HasShadow="true"
                    PointerDirection="Down">
                    <Border Background="#40FF">
                        <TextBlock Text="TEST TEST TEST" />
                    </Border>
                </popups:BubbleBorder>
                <!--
                <popups:ModalPopup x:Name="_modalPopup" />
                -->
            </Grid.Children>
        </Grid>
    </Page.Content>
</Page>
