<UserControl
    x:Class="UserControlTest.Popups.UwpPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UserControlTest.Popups"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Popup
        x:Name="ParentPopup"
        IsLightDismissEnabled="True"
        IsOpen="False"
        LightDismissOverlayMode="On"
        Loaded="OnPopupLoaded">
        <local:BubbleBorder
            x:Name="_bubbleBorder"
            Margin="{x:Bind ParentPopup.Margin, Mode=OneWay}"
            Background="LightBlue"
            BorderBrush="DarkBlue"
            BorderThickness="2"
            OutsideCornersRadius="4"
            PointerDirection="Up"
            SizeChanged="OnSizeChanged">
            <Grid x:Name="gdChild">
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <ProgressRing
                    x:Name="CustomProgressRing"
                    Grid.Column="0"
                    Width="40"
                    Height="40"
                    Margin="10"
                    Background="White"
                    IsActive="true" />
                <Border
                    Grid.Column="1"
                    Margin="10"
                    Background="White">
                    <TextBlock
                        x:Name="CustomTextBlock"
                        Width="auto"
                        Height="auto"
                        VerticalAlignment="Center"
                        FontSize="25" />
                </Border>
            </Grid>
        </local:BubbleBorder>
